<h1>Add a new food</h1>
@if(@Model.Count == 0)
{
  <p>No food in inventory</p>
}
@foreach(var foodItem in Model)
{
  <ul>
    <li>@foodItem.GetName()</li>
  </ul>
}

<form action="newfood" method="post">
  <input type="text" name="food" placeholder="add a new food">
  <button type="submit" name="button">Add</button>
</form>
